.character {
  margin-top: 3px;
  border-bottom: 1px solid #ccc;
}

.line {
  width: 100%;
  height: 1px;
  background: #ccc;
}

.character > view, .property {
  display: -webkit-flex;
  display: flex;
  -webkit-flex-direction: row;
  flex-direction: row;
  font-size: 14px;
  line-height: 1.5;
}
 
